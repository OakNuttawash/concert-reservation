{
  "name": "datawow-assignment",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "schema": "pnpx openapi-typescript ./apps/api/swagger-spec.json -o ./apps/web/api/schema.d.ts",
    "compose:up": "docker-compose up -d",
    "compose:down": "docker-compose down"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.3",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
